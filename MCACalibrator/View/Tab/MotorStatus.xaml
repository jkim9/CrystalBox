<UserControl x:Class="MCACalibrator.View.Tab.MotorStatus"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Resources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Label Content="Position"></Label>
            <Label ContentStringFormat="{}{0:0.00}"  Content="{Binding MotorStatus.PositionCM}"></Label>
            <Label Content="cm"></Label>
            <Label Content="Power"/>
            <Rectangle MinWidth="20" Margin="4" Fill="{Binding  MotorStatus.Powered, Converter={StaticResource GreenRedConverter}}"/>
        </StackPanel>
    </Grid>
</UserControl>
